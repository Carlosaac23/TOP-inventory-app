<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= wagon.model %> - Wagon Details</title>
  <link rel="stylesheet" href="/style.css">
</head>
<body>
  <%- include('../partials/header.ejs') %>

  <main class="container">
    <div class="page-header">
      <h1 class="page-title">ðŸšƒ <%= wagon.model %></h1>
      <p class="page-subtitle">Model #<%= wagon.model_id %></p>
    </div>

    <article class="product-card">
      <div class="product-image">
        <img class="info-image" src="<%= wagon.image_url %>" alt="<%= wagon.model %> scale model">
        <% if (wagon.stock_quantity > 10) { %>
          <span class="product-badge in-stock">In Stock</span>
        <% } else if (wagon.stock_quantity > 0) { %>
          <span class="product-badge low-stock">Low Stock</span>
        <% } else { %>
          <span class="product-badge">Out of Stock</span>
        <% } %>
      </div>

      <div class="product-content">
        <div class="product-category">Wagon</div>
        <div class="product-btns">
          <h2 class="product-name"><%= wagon.model %></h2>
          <button class="btn btn-secondary">
            <a href="<%= wagon.id %>/update" style="text-decoration: none; color: inherit">Edit</a>
          </button>
        </div>
        <p class="product-model">Model #<%= wagon.model_id %></p>
        <p class="product-description"><%= wagon.description %></p>

        <div class="product-meta">
          <span class="meta-item">
            <% brands.forEach(brand => { %>
              <p><%= brand.id === wagon.brand_id ? brand.name : '' %></p>
            <% }) %>
          </span>
          <span class="meta-item">
            <% scales.forEach(scale => { %>
              <p><%= scale.id === wagon.scale_id ? scale.scale : '' %></p>
            <% }) %>
          </span>
          <span class="meta-item">
            <% categories.forEach(category => { %>
              <p><%= category.id === wagon.category_id ? category.name : '' %></p>
            <% }) %>
          </span>
        </div>

        <div class="product-footer">
          <span class="product-price">$<%= wagon.price %></span>
          <span class="product-stock"><%= wagon.stock_quantity %> available</span>
        </div>

        <div style="margin-top: 1.5rem; display: flex; gap: 1rem; flex-wrap: wrap;">
          <a class="btn btn-primary" href="/wagons">Back to Wagons</a>
          <a class="btn btn-outline" href="/">Return Home</a>
        </div>
      </div>
    </article>
  </main>

  <%- include('../partials/footer.ejs') %>
</body>
</html>
