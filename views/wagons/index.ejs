<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Wagons - Railway Model Inventory</title>
  <link rel="stylesheet" href="/style.css">
</head>
<body>
  <%- include('../partials/header.ejs') %>

  <!-- Main Content -->
  <main class="container">
    <!-- Page Header -->
    <div class="page-header">
      <h1 class="page-title">ðŸšƒ Wagon Collection</h1>
      <p class="page-subtitle">Explore our premium selection of model wagons</p>
      <div style="margin-top: 1.5rem;">
        <a class="btn btn-primary" href="/wagons/add">Add Wagon</a>
      </div>
    </div>

    <!-- Filter Bar -->
    <form class="filter-bar" method="GET" action="/wagons">
      <div>
      <%- include('../partials/filter.ejs', {
        id: 'category',
        label: 'Categories',
        allLabel: 'All Categories',
        items: categories,
        valueKey: 'id',
        textKey: 'name',
        selectedValue: filters?.category
      }) %>
      <%- include('../partials/filter.ejs', {
        id: 'scale',
        label: 'Scales',
        allLabel: 'All Scales',
        items: scales,
        valueKey: 'id',
        textKey: 'scale',
        selectedValue: filters?.scale
      }) %>
      <%- include('../partials/filter.ejs', {
        id: 'brand',
        label: 'Brands',
        allLabel: 'All Brands',
        items: brands,
        valueKey: 'id',
        textKey: 'name',
        selectedValue: filters?.brand
      }) %>
      </div>
      <button class="btn btn-secondary" type="submit">Apply</button>
     </form>

    <!-- Product Grid -->
    <% if (wagons && wagons.length > 0) { %>
      <div class="product-grid">
        <% wagons.forEach(wagon => { %>
          <article class="product-card">
            <div class="product-image">
              <img src="<%= wagon.image_url %>" alt="<%= wagon.model %> scale model">
              <% if (wagon.stock_quantity > 10) { %>
                <span class="product-badge in-stock">In Stock</span>
              <% } else if (wagon.stock_quantity > 0) { %>
                <span class="product-badge low-stock">Low Stock</span>
              <% } else { %>
                <span class="product-badge">Out of Stock</span>
              <% } %>
            </div>
            <div class="product-content">
              <div class="product-category">Wagon</div>
              <div class="product-btns">
                <h2 class="product-name"><%= wagon.model %></h2>
                <button class="btn btn-secondary">
                  <a href="/wagons/<%= wagon.id %>/update" style="text-decoration: none; color: inherit">Edit</a>
                </button>
              </div>
              <p class="product-model">Model #<%= wagon.model_id %></p>
              <p class="product-description"><%= wagon.description %></p>
              
              <div class="product-meta">
                <span class="meta-item">
                  <% brands.forEach(brand => { %>
                   <p><%= brand.id === wagon.brand_id ? brand.name : '' %></p>
                  <% }) %>
                </span>
                <span class="meta-item">
                  <% scales.forEach(scale => { %>
                    <p><%= scale.id === wagon.scale_id ? scale.scale : '' %></p>
                  <% }) %>
                </span>
                <span class="meta-item">
                  <% categories.forEach(category => { %>
                    <p><%= category.id === wagon.category_id ? category.name : '' %></p>
                  <% }) %>
                </span>
              </div>

              <div class="product-footer">
                <span class="product-price">$<%= wagon.price %></span>
                <span class="product-stock"><%= wagon.stock_quantity %> available</span>
              </div>
              
              <button class="btn btn-primary" style="width: 100%; margin-top: 1rem;">
                <a href="wagons/<%= wagon.id %>" style="text-decoration: none; color: inherit;">View Details</a>
              </button>
            </div>
          </article>
        <% }); %>
      </div>
    <% } else { %>
      <!-- Empty State -->
      <div class="empty-state">
        <div class="empty-state-icon">ðŸšƒ</div>
        <h2 class="empty-state-title">No Wagons Found</h2>
        <p class="empty-state-message">We couldn't find any wagons in our inventory. Check back soon!</p>
        <a href="/" class="btn btn-secondary">Return Home</a>
      </div>
    <% } %>
  </main>

  <%- include('../partials/footer.ejs') %>
</body>
</html>