<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Tracks - Railway Model Inventory</title>
  <link rel="stylesheet" href="/style.css">
</head>
<body>
  <%- include('../partials/header.ejs') %>

  <!-- Main Content -->
  <main class="container">
    <!-- Page Header -->
    <div class="page-header">
      <h1 class="page-title">üõ§Ô∏è Track Collection</h1>
      <p class="page-subtitle">Explore our premium selection of model tracks</p>
    </div>

    <!-- Filter Bar -->
    <form class="filter-bar" method="GET" action="/tracks">
      <div>
      <%- include('../partials/filter.ejs', {
        id: 'category',
        label: 'Categories',
        allLabel: 'All Categories',
        items: categories,
        valueKey: 'id',
        textKey: 'name',
        selectedValue: filters?.category
      }) %>
      <%- include('../partials/filter.ejs', {
        id: 'scale',
        label: 'Scales',
        allLabel: 'All Scales',
        items: scales,
        valueKey: 'id',
        textKey: 'scale',
        selectedValue: filters?.scale
      }) %>
      <%- include('../partials/filter.ejs', {
        id: 'brand',
        label: 'Brands',
        allLabel: 'All Brands',
        items: brands,
        valueKey: 'id',
        textKey: 'name',
        selectedValue: filters?.brand
      }) %>
      </div>
      <button class="btn btn-secondary" type="submit">Apply</button>
     </form>

    <!-- Product Grid -->
    <% if (tracks && tracks.length > 0) { %>
      <div class="product-grid">
        <% tracks.forEach(track => { %>
          <article class="product-card">
            <div class="product-image">
              üõ§Ô∏è
              <% if (track.stock_quantity > 10) { %>
                <span class="product-badge in-stock">In Stock</span>
              <% } else if (track.stock_quantity > 0) { %>
                <span class="product-badge low-stock">Low Stock</span>
              <% } else { %>
                <span class="product-badge">Out of Stock</span>
              <% } %>
            </div>
            <div class="product-content">
              <div class="product-category">Track</div>
              <div class="product-btns">
                <h2 class="product-name"><%= track.model %></h2>
                <button class="btn btn-secondary">
                  <a href="/tracks/<%= track.id %>/update" style="text-decoration: none; color: inherit">Edit</a>
                </button>
              </div>
              <p class="product-model">Model #<%= track.model_id %></p>
              <p class="product-description"><%= track.description %></p>
              
              <div class="product-meta">
                <span class="meta-item">üè≠ Brand</span>
                <span class="meta-item">üìè Scale</span>
                <span class="meta-item">‚öôÔ∏è Category</span>
              </div>

              <div class="product-footer">
                <span class="product-price">$<%= track.price %></span>
                <span class="product-stock"><%= track.stock_quantity %> available</span>
              </div>
              
              <button class="btn btn-primary" style="width: 100%; margin-top: 1rem;">
                <a href="tracks/<%= track.id %>" style="text-decoration: none; color: inherit;">View Details</a>
              </button>
            </div>
          </article>
        <% }); %>
      </div>
    <% } else { %>
      <!-- Empty State -->
      <div class="empty-state">
        <div class="empty-state-icon">üõ§Ô∏è</div>
        <h2 class="empty-state-title">No Tracks Found</h2>
        <p class="empty-state-message">We couldn't find any tracks in our inventory. Check back soon!</p>
        <a href="/" class="btn btn-secondary">Return Home</a>
      </div>
    <% } %>
  </main>

  <%- include('../partials/footer.ejs') %>
</body>
</html>