<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Trains - Railway Model Inventory</title>
  <link rel="stylesheet" href="/style.css">
</head>
<body>
  <!-- Header -->
  <header class="header">
    <div class="nav-container">
      <a href="/" class="logo">Railway Models</a>
      <nav>
        <ul class="nav-links">
          <li><a href="/trains" class="active">Trains</a></li>
          <li><a href="/wagons">Wagons</a></li>
          <li><a href="/tracks">Tracks</a></li>
          <li><a href="/brands">Brands</a></li>
        </ul>
      </nav>
    </div>
  </header>

  <!-- Main Content -->
  <main class="container">
    <!-- Page Header -->
    <div class="page-header">
      <h1 class="page-title">üöÇ Locomotive Collection</h1>
      <p class="page-subtitle">Explore our premium selection of model trains</p>
    </div>

    <!-- Filter Bar -->
    <div class="filter-bar">
      <div>
        <label class="filter-label" for="category">Category:</label>
        <select id="category">
          <option value="">All Categories</option>
          <option value="steam">Steam Locomotive</option>
          <option value="diesel">Diesel Locomotive</option>
          <option value="electric">Electric Locomotive</option>
        </select>
      </div>
      <div>
        <label class="filter-label" for="scale">Scale:</label>
        <select id="scale">
          <option value="">All Scales</option>
          <option value="ho">HO (1:87)</option>
          <option value="n">N (1:160)</option>
          <option value="o">O (1:48)</option>
        </select>
      </div>
      <div>
        <label class="filter-label" for="brand">Brand:</label>
        <select id="brand">
          <option value="">All Brands</option>
          <option value="marklin">M√§rklin</option>
          <option value="lego">LEGO</option>
          <option value="hornby">Hornby</option>
        </select>
      </div>
      <div style="margin-left: auto;">
        <input type="search" placeholder="Search trains..." />
      </div>
    </div>

    <!-- Product Grid -->
    <% if (trains && trains.length > 0) { %>
      <div class="product-grid">
        <% trains.forEach(train => { %>
          <article class="product-card">
            <div class="product-image">
              üöÇ
              <% if (train.stock_quantity > 10) { %>
                <span class="product-badge in-stock">In Stock</span>
              <% } else if (train.stock_quantity > 0) { %>
                <span class="product-badge low-stock">Low Stock</span>
              <% } else { %>
                <span class="product-badge">Out of Stock</span>
              <% } %>
            </div>
            <div class="product-content">
              <div class="product-category">Locomotive</div>
              <h2 class="product-name"><%= train.model %></h2>
              <p class="product-model">Model #<%= train.model_id %></p>
              <p class="product-description"><%= train.description %></p>
              
              <div class="product-meta">
                <span class="meta-item">üè≠ Brand</span>
                <span class="meta-item">üìè Scale</span>
                <span class="meta-item">‚öôÔ∏è Category</span>
              </div>

              <div class="product-footer">
                <span class="product-price">$<%= train.price %></span>
                <span class="product-stock"><%= train.stock_quantity %> available</span>
              </div>
              
              <button class="btn btn-primary" style="width: 100%; margin-top: 1rem;">
                View Details
              </button>
            </div>
          </article>
        <% }); %>
      </div>
    <% } else { %>
      <!-- Empty State -->
      <div class="empty-state">
        <div class="empty-state-icon">üöÇ</div>
        <h2 class="empty-state-title">No Trains Found</h2>
        <p class="empty-state-message">We couldn't find any locomotives in our inventory. Check back soon!</p>
        <a href="/" class="btn btn-secondary">Return Home</a>
      </div>
    <% } %>
  </main>

  <!-- Footer -->
  <footer class="footer">
    <div class="footer-content">
      <div class="footer-links">
        <a href="/about">About Us</a>
        <a href="/contact">Contact</a>
        <a href="/shipping">Shipping Info</a>
        <a href="/returns">Returns</a>
      </div>
      <p class="footer-text">¬© 2026 Railway Models. Built with passion for model trains.</p>
    </div>
  </footer>
</body>
</html>